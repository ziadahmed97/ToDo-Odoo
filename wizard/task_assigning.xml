<odoo>
    <record id="task_assign_wizard_view_form" model="ir.ui.view">
        <field name="name">task assign</field>
        <field name="model">task.assign</field>
        <field name="arch" type="xml">
               <form>
                   <group>
                        <field name="assignto_id" invisible="0"/>
                   </group>
                   <footer>
                       <button string="confirm" type="object" name="action_confirm" class="btn-primary"/>
                       <button string="cancel" special="cancel" class="btn-secondary"/>
                   </footer>
               </form>
        </field>
    </record>
    <record id="task_assign_action" model="ir.actions.act_window">
        <field name="name">task assign</field>
        <field name="res_model">task.assign</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>