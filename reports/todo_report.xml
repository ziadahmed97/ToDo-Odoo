<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="todo_report" model="ir.actions.report">
        <field name="name">Todo Report</field>
        <field name="model">todo</field>
        <field name="binding_model_id" ref="model_todo"/>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_type">report</field>
        <field name="report_name">TaskOne.todo_report_template</field>
    </record>

    <template id="todo_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                        .page {
                            padding: 20px;
                            font-family: Arial, sans-serif;
                        }
                    </style>

                    <div style="border: 2px solid #5b7fa6; padding: 20px; margin-bottom: 20px;">
                        <div style="border: 2px solid #000; padding: 20px; background-color: #fff;">
                            <table style="width: 100%; margin-bottom: 20px; border: none;">
                                <tr>
                                    <td style="width: 30%; font-weight: bold; padding: 5px 0;">TASK:</td>
                                    <td style="width: 70%; padding: 5px 0;">
                                        <span t-esc="o.task_name or '-'"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; padding: 5px 0;">Due Date:</td>
                                    <td style="padding: 5px 0;">
                                        <span t-field="o.due_date"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; padding: 5px 0;">Assign To:</td>
                                    <td style="padding: 5px 0;">
                                        <span t-esc="o.assigned_to or '-'"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; padding: 5px 0;">Estimated Time:</td>
                                    <td style="padding: 5px 0;">
                                        <span t-esc="o.estimated_time or 0"/> H
                                    </td>
                                </tr>
                            </table>

                            <div style="margin-top: 20px;">
                                <div style="font-weight: bold; font-size: 16px; margin-bottom: 10px;">Description:</div>
                                <div style="margin-bottom: 20px;">
                                    <span t-esc="o.description or 'No description provided.'"/>
                                </div>
                            </div>

                            <div style="border: 2px solid #000; margin-top: 20px;">
                                <div style="text-align: center; font-weight: bold; font-size: 18px; padding: 10px; background-color: #fff;">
                                    Timesheet
                                </div>
                                <table style="width: 100%; border-collapse: collapse;">
                                    <thead>
                                        <tr style="background-color: #fff;">
                                            <th style="border: 1px solid #000; padding: 8px; text-align: left; width: 10%;">#</th>
                                            <th style="border: 1px solid #000; padding: 8px; text-align: left; width: 20%;">Date</th>
                                            <th style="border: 1px solid #000; padding: 8px; text-align: left; width: 50%;">Description</th>
                                            <th style="border: 1px solid #000; padding: 8px; text-align: left; width: 20%;">time</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="line_num" t-value="1"/>
                                        <t t-set="total_hours" t-value="0"/>
                                        <t t-foreach="o.line_ids" t-as="line">
                                            <tr>
                                                <td style="border: 1px solid #000; padding: 8px;"><t t-esc="line_num"/></td>
                                                <td style="border: 1px solid #000; padding: 8px;">
                                                    <span t-field="line.date"/>
                                                </td>
                                                <td style="border: 1px solid #000; padding: 8px;">
                                                    <span t-esc="line.description or '-'"/>
                                                </td>
                                                <td style="border: 1px solid #000; padding: 8px;">
                                                    <span t-esc="line.time or 0"/> H
                                                </td>
                                            </tr>
                                            <t t-set="line_num" t-value="line_num + 1"/>
                                            <t t-set="total_hours" t-value="total_hours + (line.time or 0)"/>
                                        </t>
                                        <tr style="font-weight: bold;">
                                            <td colspan="3" style="border: 1px solid #000; padding: 8px; text-align: center;">Total Time</td>
                                            <td style="border: 1px solid #000; padding: 8px;"><t t-esc="total_hours"/> h</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="page-break-after: always;"/>
            </t>
        </t>
    </template>
</odoo>